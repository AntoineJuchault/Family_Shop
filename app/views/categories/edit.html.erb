<div class="pages">
  <h1>Edit Category</h1>
  <%= form_with model: @category, local: true do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  <%= link_to "Back", categories_path %>

</div>
