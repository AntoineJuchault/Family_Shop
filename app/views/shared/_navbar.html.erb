        </ul>
      </div> 
      <% if user_signed_in? %>
      <!-- Affichage du dropdown menu si connecté -->
      <div id="dropdown_menu">
        <!-- Case à cocher cachée pour gérer le clic -->
        <input type="checkbox" id="dropdown_toggle">
        <label for="dropdown_toggle">
          <div id="dropdown_menu_image">
            <!-- Image pour le menu déroulant -->
          </div>
        </label>
        <ul>
          <li>
            <%= link_to "Profile", edit_user_registration_path %> 
          </li>
          <li>
            <%= button_to "Déconnexion", destroy_user_session_path, method: :delete %> 
          </li>
        </ul>
      </div>
      <% else %>
      <!-- Affichage des liens de connexion si non connecté -->
      <div id="register">
        <ul>
          <li>
            <%= link_to "Connexion", new_user_session_path %> 
          </li>
          <li>
            <%= link_to "Inscription", new_user_registration_path %> 
          </li>
        </ul>
      </div>
      <% end %>
